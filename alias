# shell
alias s='cd ..'
alias f='find . -name'
alias vi="nvim"
alias copy="xclip -selection clipboard"

# git
alias gm='git lg --author="$(git config user.name)"'
alias git-alias='vi ~/.oh-my-zsh/plugins/git/README.md'

# python
alias python='python3'

# android
alias ss='adb exec-out screencap -p > ~/Desktop/screenshot-"$( date +%Y.%m.%d-%H.%M.%S )".png'

# linux
alias reboot-win='sudo grub-reboot "Windows Boot Manager (on /dev/nvme0n1p1)" && reboot'

